[module/menu]
type = custom/script
exec = echo ""

[module/cpu]
type = internal/cpu
format = <label>
label =  %percentage%% 


[module/memory]
type = internal/memory
interval = 1
format = <label>
label =  %gb_used%/%gb_total%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = 
label-muted-foreground = #666
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/network-traffic]
type = custom/script
exec = ~/.config/polybar/network-traffic.sh
tail = true

